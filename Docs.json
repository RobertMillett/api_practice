{
  "openapi": 3.0.0,
  "info": {
    "title": "Reciple API",
    "description": "Allows for storing and viewing recipes",
    "version": "0.0.1a"
  },
  "paths": {
    "/recipes": {
      "get": {
        "responses": {
          "200": {
            "description": "Returns a list of all recipes",
            "content": {
              "application/json": {
                "schema": {
                  "type": "array",
                  "items": {
                    "$ref": "#/components/schemas/Recipe"
                  }
                }
              }
            }
          }
        }
      },
      "post": {
        "requestBody": {
          "content": {
            "application/json": {
              "schema": {
                "$ref": "#/components/schemas/Recipe"
              }
            }
          }
        },
        "responses": {
          "200": {
            "description": "Recipe added successfully",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Recipe"
                }
              }
            }
          }
        }
      }
    },
    "/recipes/{recipeId}": {
      "get": {
        "responses": {
          "200": {
            "description": "Returns a specific recipe",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Recipe"
                }
              }
            }
          }
        }
      },
    "parameters": [
      {
        "name": "recipeId",
        "in": "path",
        "required": true,
        "schema": {
          "type": "integer"
        }
      }]
    }
  },
  "components": {
    "schemas": {
      "Recipe": {
        "type": "object",
        "properties": {
          "id": {
            "type": "integer",
            "readOnly": true
          },
          "name": {
            "type": "string"
          },
          "description": {
            "type": "string"
          },
          "instructions": {
            "type": "string"
          },
          "ingredients": {
            "type": "array",
            "items": {
              "$ref": "#/components/schemas/Ingredient"
            }
          }
        }
      },
      "Ingredient": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string"
          },
          "quantity": {
            "type": "object",
            "properties": {
              "amount": {
                "type": "string"
              },
              "units": {
                "type": "string"
              }
            }
          }
        }
      }
    }
  }
}